#include <iostream>
#include <cmath>
using namespace std;
int main()
{
	double a; 
	int b;
	double x, y, z;
	cout << "Введите длинну ребра a: ";
	cin >> a;
	cout << "1 – вычислить площадь грани" << "\n" << "2 – площадь полной поверхности" << "\n" << "3 – объем куба" << endl;
	cout << "";
	cin >> b;
		if(b==1){
			x=a*a;
			cout << "Площадь грани: " << x << endl;
	}
		if(b==2){
			y=6*pow(a,2);
			cout << "Площадь полной поверхности: " << y << endl;
		}
		if(b==3){
			z=pow(a,3);
			cout << "Объем куба: " << z << endl;
		}
		else {
			cout<<"Неправильное значение!";
		}

cout << "" << endl;






cout << "Введите длинну ребра a: ";
cin >> a;

x=a*a;
y=6*pow(a,2);
z=pow(a,3);

cout << "1 – вычислить площадь грани" << "\n" << "2 – площадь полной поверхности" << "\n" << "3 – объем куба" << endl;

cin >> b;


switch(b)
{
	case 1: cout << "Площадь грани: " << x << endl;
            break;
    case 2: cout << "Площадь полной поверхности: " << y << endl;
            break;
    case 3: cout << "Объем куба: " << z << endl;
            break;
    default: cout<<"Неправильное значение!";
    }
       
return 0;

}
